{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rating list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Rate</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td><a href="{{ path('rating_show', { 'id': rating.id }) }}">{{ rating.id }}</a></td>
                <td>{{ rating.rate }}</td>
                <td>{{ rating.comment }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rating_show', { 'id': rating.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rating_edit', { 'id': rating.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rating_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
