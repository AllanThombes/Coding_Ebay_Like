{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bid list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Automatic</th>
                <th>Maxbid</th>
                <th>Biddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bid in bids %}
            <tr>
                <td><a href="{{ path('bid_show', { 'id': bid.id }) }}">{{ bid.id }}</a></td>
                <td>{{ bid.amount }}</td>
                <td>{% if bid.automatic %}Yes{% else %}No{% endif %}</td>
                <td>{{ bid.maxBid }}</td>
                <td>{% if bid.bidDate %}{{ bid.bidDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bid_show', { 'id': bid.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('bid_edit', { 'id': bid.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bid_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
