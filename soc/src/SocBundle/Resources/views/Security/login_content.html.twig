{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="form-horizontal" method="post">
    <input type="hidden" name="_csrf_token" class="form-control" value="{{ csrf_token }}" />
    <div class="form-group">
      <label for="username" class="control-label col-sm-2">{{ 'security.login.username'|trans }}</label>
      <div class="col-sm-5">
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" />
      </div>
    </div>
    <div class="form-group">
        <label for="password" class="control-label col-sm-2">{{ 'security.login.password'|trans }}</label>
      <div class="col-sm-5">
        <input type="password" id="password" name="_password" class="form-control" required="required" />
      </div>
    </div>
    <div class="form-group">
    <label for="remember_me" class="control-label col-sm-2">{{ 'security.login.remember_me'|trans }}</label>
      <div class="col-sm-5">
        <input type="checkbox" id="remember_me" name="_remember_me" class="checkbox" value="on" />
      </div>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" id="_submit" name="_submit" class="btn btn-default" value="{{ 'security.login.submit'|trans }}" />
    </div>
</form>
